{
  "extends": [
    "plugin:flowtype/recommended",
    "eslint:recommended"
  ],
  "plugins": [
    "flowtype"
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "semi": 2,
    "no-console": 0,
    "no-useless-constructor": "error",
    "no-cond-assign": "error",
    "curly": [2, "all"],
    "quotes": [2, "single"]
  }
}
